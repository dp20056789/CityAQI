<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/activity_bg"
    android:orientation="vertical">
     <!-- Top  -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        >
        <ImageButton
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:id="@+id/addCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_add_bg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
        <ImageButton
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:id="@+id/share" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_refresh_bg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
        <TextView 
            android:id="@+id/city"
            android:text="武汉"
            android:textColor="#000000"
            android:textSize="22dip"
            android:gravity="center"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/share"
            android:layout_toRightOf="@id/addCity"
            />
       
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/lay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
       <LinearLayout
       
        android:paddingTop="10dip"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        >
        <TextView  
            android:textColor="#000000"
            android:gravity="center"
            android:text="城市各区域测量点数据"
            android:textSize="16dip"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
   
    <View        
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_width="fill_parent"
        android:layout_height="0.34dip"
        android:background="#000000"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:orientation="horizontal"
        
        >
        <TextView  
            android:textColor="#000000" 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="序号"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
          <TextView  
            android:textColor="#000000" 
            android:layout_width="0dip"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="区域"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
         <TextView  
            android:textColor="#000000" 
            android:layout_width="0dip"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="AQI"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
         <TextView  
            android:textColor="#000000" 
            android:layout_width="0dip"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="pm2.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
     <View 
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_width="fill_parent"
        android:layout_height="0.34dip"
        android:background="#000000"/>

      	<LinearLayout 
      	    android:id="@+id/content"
      	    android:layout_width="fill_parent"
      	    android:layout_height="wrap_content"
      	    android:orientation="vertical">     	    
      	</LinearLayout>
     
        <View   
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_width="fill_parent"
        android:layout_height="0.34dip"
        android:background="#000000"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView  
            android:id="@+id/time"
            android:textColor="#000000" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="最新更新时间:2014-06-10T17:00:00Z"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>