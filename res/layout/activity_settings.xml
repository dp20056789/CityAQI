<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/activity_bg" >
    
     <!-- Top  -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        >
       

        <TextView 
            android:id="@+id/city"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="22dip"
            android:gravity="center"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
       
            />
       
    </RelativeLayout>
    
    
    
     <View 
        android:layout_marginTop="30dip"
	    android:layout_width="fill_parent"
	    android:layout_height="0.22dip"
	    android:background="#778899"/>   
		    <LinearLayout
		 android:id="@+id/advicelayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:background="@drawable/button_setting_bg"
        android:paddingRight="10dip"
        android:clickable="true"> 
        <ImageView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/advice"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_gravity="center"/>   
        <TextView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:text="留言"
            android:textColor="#000000"
            android:textSize="18dip"
            android:textStyle="bold"/>
        <ImageView 
             android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_gravity="center"
            />
    </LinearLayout>
   <View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.22dip"
	    android:background="#778899"/>  
   	    <LinearLayout
   	    android:id="@+id/helplayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:background="@drawable/button_setting_bg"
        android:paddingRight="10dip"
        android:clickable="true"> 
        <ImageView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_gravity="center"/>   
        <TextView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:text="帮助"
            android:textColor="#000000"
            android:textSize="18dip"
            android:textStyle="bold"/>
        <ImageView 
             android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_gravity="center"
            />
    </LinearLayout>
   <View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.22dip"
	    android:background="#778899"/>   
		    <LinearLayout
		 android:id="@+id/aboutlayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:background="@drawable/button_setting_bg"
        android:paddingRight="10dip"
        android:clickable="true"> 
        <ImageView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img1"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_gravity="center"/>   
        <TextView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:text="关于"
            android:textColor="#000000"
            android:textSize="18dip"
            android:textStyle="bold"/>
        <ImageView 
             android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_gravity="center"
            />
    </LinearLayout>
   <View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.22dip"
	    android:background="#778899"/>  
	    <LinearLayout
	         android:id="@+id/exitayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:background="@drawable/button_setting_bg"
        android:paddingRight="10dip"
        android:clickable="true"> 
        <ImageView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/exit"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_gravity="center"/>   
        <TextView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:text="退出"
            android:textColor="#000000"
            android:textSize="18dip"
            android:textStyle="bold"/>
        <ImageView 
             android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_gravity="center"
            />
    </LinearLayout>
   <View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.22dip"
	    android:background="#778899"/>  
	    
   <LinearLayout 
       android:layout_marginTop="100dip"
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       <TextView
           android:gravity="center" 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="版权所有©Forsta"
           android:textColor="#000000"
           android:textSize="16dip"/>
         <TextView
           android:gravity="center" 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:text="Email:forsta@163.com"
           android:textSize="16dip"/>
   </LinearLayout>
</LinearLayout>